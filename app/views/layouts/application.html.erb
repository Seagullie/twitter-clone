<!DOCTYPE html>
<html>
  <head>
    <title>Twittter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<%# Can't make a multiline comment :C %>

    <% if (flash[:alert] and false) %>
      <div class="notification hide"> 
        <p class="notice"> âœ” <%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>


  <nav class="nav-wrapper blue">
    <div class="container">
      <%= link_to root_path, class:"brand-logo" do %>

        <span>Twitter Clone</span>

      <% end %>

      <ul class="right">
        <li class="hide"><%= link_to 'Home', root_path %></li>

        <% if not user_signed_in? %>
          <li><%= link_to 'Sign Up', '/users/sign_up' %></li>
          <li><%= link_to 'Log In', '/users/sign_in' %></li>
        <% else%>
          <li><%= link_to current_user.name, edit_user_registration_path%></li>
          <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </nav>

    

    <%= yield %>
    <script>
        M.AutoInit();
    </script>
  </body>

</html>

