<%= simple_form_for (@tweet) do |f| %>
  <% f.error_notification %>
  <div class="card tweet hoverable">
                <p class="author circle blue"></p>
                <div class="card-content">
                    <span class="card-title">What's on your mind?</span>
                    <%= f.input :tweeet, label: "Tweet about it",
                    input_html: {class: "materialize-textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweet..." %>
                    <%= f.button :submit, class: 'btn' %>
                </div>
            </div>
<% end%>
